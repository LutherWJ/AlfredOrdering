{
  "name": "alfredordering",
  "version": "1.0.0",
  "description": "Mobile ordering app built with MEVB stack",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch server/index.ts",
    "dev:client": "vite",
    "start": "bun run server/index.ts",
    "build:client": "vue-tsc --project ./client && vite build",
    "build:server": "tsc --project ./server",
    "typecheck": "vue-tsc --project ./client --noEmit && tsc --project ./server --noEmit",
    "typecheck:client": "vue-tsc --project ./client --noEmit",
    "typecheck:server": "tsc --project ./server --noEmit",
    "preview:client": "vite preview",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "db:start": "docker-compose up -d mongodb",
    "db:stop": "docker-compose stop mongodb",
    "production": "docker-compose up -d --build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "vite": "^6.0.5",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^9.0.0",
    "passport": "^0.7.0",
    "tailwindcss": "^3.4.17",
    "vue": "^3.5.13",
    "vue-router": "^4.6.3"
  }
}

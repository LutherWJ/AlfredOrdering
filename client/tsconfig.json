{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Client-specific configuration for Vue
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",

    // Vue-specific settings
    "types": ["vite/client"],
    "isolatedModules": true,

    // Path resolution for client
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "../server",
    "../dist"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}